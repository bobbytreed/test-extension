{
    "compilerOptions": {
        "module": "commonjs",        
        "target": "ESNext",
        "outDir": "out",
        "lib": [
            "es6",
            "DOM"
        ],
        "noImplicitAny": false,        
        "sourceMap": true,
        "rootDir": ".",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]    
}